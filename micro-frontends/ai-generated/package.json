{
    "name": "microfrontends-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "packages/*"
    ],
    "scripts": {
      "bootstrap": "lerna bootstrap",
      "start:host": "yarn --cwd packages/host-app start",
      "start:remote1": "yarn --cwd packages/remote-app1 start",
      "start:remote2": "yarn --cwd packages/remote-app2 start",
      "start": "yarn run start:host && yarn run start:remote1 && yarn run start:remote2"
    },
    "devDependencies": {
      "lerna": "^7.0.0"
    }
  }